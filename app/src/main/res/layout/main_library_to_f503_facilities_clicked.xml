<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".main_library_to_f503_facilities_clicked">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="You are in?"
        android:textSize="48sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteY="181dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/g1library"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="gate1 library"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>

                <Button
                    android:id="@+id/theatre"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="theatre"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>
                <Button
                    android:id="@+id/gym"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="gym"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>
                <Button
                    android:id="@+id/cafeteria"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="main cafeteria"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>
                <Button
                    android:id="@+id/auditorium"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="auditorium"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>
                <Button
                    android:id="@+id/btnm305"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="gate3 library"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="20sp"
                    android:padding="20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>