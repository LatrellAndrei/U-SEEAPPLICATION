<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".m301_to_gym_main_building_clicked">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are in?"
            android:textSize="47sp"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/floor1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="m101 - m105"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:padding="30dp"/>

        <Button
            android:id="@+id/floor2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="m201 - m210"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:padding="30dp"/>
        <Button
            android:id="@+id/floor3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="m301 - m307"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:padding="30dp"/>
        <Button
            android:id="@+id/floor4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="m401 - m408"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:padding="30dp"/>
        <Button
            android:id="@+id/floor5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="m501 - m509"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:padding="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>